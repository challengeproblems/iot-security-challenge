<html>
    <head>
        <title>IoT Change Password</title>
        <meta charset="UTF-8"></meta>
    </head>
    <body>
        <h1>Change password</h1>
        <h1>{{ error_msg or "" }}</h1>
        <form action="/changepassword" method="post">
            <input
                name="old_password"
                type="text"
                placeholder="Old Password"
                value={{old_password or ""}}>
            </input>
            <input
                name="new_password"
                type="text"
                placeholder="New Password"
                value={{new_password or ""}}>
            </input>
            <input value="Change Password" type="submit"></input>
        </form>
    </body>
</html>
